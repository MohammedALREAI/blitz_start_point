    "eslint": "7.13.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-watch-typeahead": "0.6.1",
    "lint-staged": "10.5.1",
    "prettier": "^2.1.2",
    "pretty-quick": "3.1.0",
    "react-test-renderer": "16.14.0",
    "ts-jest": "26.4.4",
    "tslint-plugin-prettier": "^2.3.0",
